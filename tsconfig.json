{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "exclude": [
    "bin/*",
    "setup.ts",
    "dist/*",
    "*.d.ts",
    "build",
    "types.ts"
  ] 
}